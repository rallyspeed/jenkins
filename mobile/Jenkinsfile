#!/usr/bin/groovy

pipeline {
	agent any
	options {
        	disableConcurrentBuilds()
    	}
	environment {
		PYTHONPATH = "${WORKSPACE}"
	}
   	stages {
        	stage("Deploy - Mobfs") {
            		steps { deploy('mobfs') }
		}
	}
}

def deploy(environment) {

	def containerName = ''
	def port = ''

	if ("${environment}" == 'mobfs') {
		containerName = "mobfs"
		port = "8888"
	} 
	else {
		println "Environment not valid"
		System.exit(0)
	}

	sh "docker ps -f name=${containerName} -q | xargs --no-run-if-empty docker stop"
	sh "docker ps -a -f name=${containerName} -q | xargs -r docker rm"
	sh "docker run -d -p ${port}:5000 --name ${containerName} opensecurity/mobile-security-framework-mobfs:latest"

}
