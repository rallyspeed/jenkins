#!/usr/bin/groovy


pipeline {
	agent any
	options {
        	disableConcurrentBuilds()
    	}
	environment {
		PYTHONPATH = "${WORKSPACE}"
	}
   	stages {
        	stage("Deploy - Mobsf") {
			steps { deploy('mobsf') }
		}
		stage("Upload APK") {
			steps { upload() }
		}
		stage("Scan APK") {
			steps { scan() }
		}
	}
}

//steps
def deploy(environment) {

	def containerName = ''
	def port = ''

	if ("${environment}" == 'mobsf') {
		containerName = "mobsf"
		port = "8000"
	} 
	else {
		println "Environment not valid"
		System.exit(0)
	}

	sh "docker ps -f name=${containerName} -q | xargs --no-run-if-empty docker stop"
	sh "docker ps -a -f name=${containerName} -q | xargs -r docker rm"
	sh "docker run -d -p ${port}:8000 --name ${containerName} opensecurity/mobile-security-framework-mobsf:latest"

}

def upload() {
	def app ='app.apk'
	def token ='563d64fc5054d3b239ac0419f1d6b2378465f5c80e1778c283eb1e3265bdd7ae'
	
	sh 'curl -F "file=@mobile/${app}" http://localhost:8000/api/v1/upload -H "Authorization:${token}"'
}
def scan() {
	def app ='app.apk'
	def token ='563d64fc5054d3b239ac0419f1d6b2378465f5c80e1778c283eb1e3265bdd7ae'
	def hash ='d7f54dc1d34759b8c25f71c727b413ff'
	
	sh 'curl -X POST --url http://localhost:8000/api/v1/scan --data "scan_type=apk&file_name=${app}&hash=${hash} -H "Authorization:${token}"'
}
